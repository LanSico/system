@import "./reset.styl"
@import "./base.styl"
@import "./icon.styl"

  .box
    margin-bottom $padding
  .radius
    border-radius $border-radius-bb
  .banner
    position relative
    width 100%
    overflow hidden
    .banner-pic
      display block
      width 100%
    .banner-info
      position absolute
      width 100%
      height 100%
      overflow hidden
      left 0
      v = 100%
      top:"calc(%s - 100px)" % v
      background transparent
      .banner-info-bg
        width 100%
        height 100%
        overflow hidden
        background-position 0 $blur-height
        /*
        */
        filter blur(30px);
        -webkit-filter blur(30px);
        transform scale(1.3);
      .banner-text
        height $blur-height
        line-height $blur-height
        color $color-text-xl
        font-size $font-size-large-x
        width 100%
        position absolute
        top 0
        text-align left
        padding-left 4rem
        font-family:'PingFang SC'
  .recommend,.contest
    width 100%
    display flex
    font 0px
    flex-direction column
    .contest-card-wrapper
      margin-bottom -75px
    .recommend-card-wrapper,.contest-card-wrapper
      display flex
      flex-direction row
      justify-content space-between
      flex-wrap:wrap
      .recommend-card,.contest-card
        border-radius 10px
        overflow hidden
        width 29%
      .contest-card
        margin-bottom 75px
      .recommend-pic,.contest-pic
        height 165px
        box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
        -webkit-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
        -moz-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
      .recommend-info,.contest-info
        height 285px
        background $color-background
        padding 0 40px
        display flex
        flex-direction column
        box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
        -webkit-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
        -moz-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
      .contest-info
        height 200px
        border-radius 0px 0px 10px 10px
      .recommend-title,.contest-title
        height 100px
        line-height 100px
        color $color-text-dd
        font-family $font-r
        font-size $font-size-large
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 1
        overflow hidden
        text-align left
      .recommend-introduce,.contest-host
        display -webkit-box
        height 4.5rem
        line-height 1.5rem
        color $color-text-dd
        font-family $font-r
        font-size $font-size-medium
        -webkit-box-orient vertical
        -webkit-line-clamp 3
        overflow hidden
        text-align left
        margin-bottom: 30px;
      .contest-host
        height 1.5rem
        -webkit-line-clamp 1
      .participants
        flex-grow 1
        padding 20px 0
        border-top 2px solid #f5f5f5
        display flex
        flex-direction row
        .participant
          width 40px
          height 40px
          border $border-d
          border-radius 50%
          background $color-gradient
          margin-right 15px
      .contest-period
        height 50px
        box-sizing border-box
        padding 0 0 20px 0
        display flex
        flex-direction row
        justify-content space-between
        .period
          width 100px
          padding 5px
          border-radius 50px
          line-height 20px
          background $color-sub-theme
          color $color-background
      .first-period,.first-progress-bar
        background $color-orange!important;
      .first-progress-bar
        width 23%!important
      .second-period,.second-progress-bar
        background $color-blue!important;
      .second-progress-bar
        width 55%!important
      .third-period,.third-progress-bar
        background $color-green!important;
      .third-progress-bar
        width 10%!important
      .forth-period,.forth-progress-bar
        background #09d2f0!important;
      .forth-progress-bar
        width 43%!important
      .fifth-period,.fifth-progress-bar
        background #e1001a!important;
      .fifth-progress-bar
        width 22%!important
      .sixth-period,.sixth-progress-bar
        background #bfcdbe!important;
      .sixth-progress-bar
        width 55%!important
      .seventh-period,.seventh-progress-bar
        background #c1ad95!important;
      .seventh-progress-bar
        width 44%!important
      .eighth-period,.eighth-progress-bar
        background #3e1416!important;
      .eighth-progress-bar
        width 16%!important
      .ninth-period,.ninth-progress-bar
        background #8491a2!important;
      .ninth-progress-bar
        width 33%!important
    .contest-progress
      margin-top 30px
      background $color-background
      width 100%
      height 125px
      line-height 125px
      border-radius: 10px
      box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
      -webkit-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
      -moz-box-shadow: 0 0 20px 2px rgba(200,200,200, .1);
      position relative
      .progress
        display flex
        flex-direction row
      .progress-bar
        position absolute
        top 0
        bottom 0
        left 20%
        margin auto
        display inline-block
        width 60% * 0.6
        height 6px
        border-radius 3px
        background $color-theme
      .progress-bar-bg
        display inline-block
        width 60%
        height 6px
        border-radius 3px
        background #ececec
        position absolute
        top 0
        bottom 0
        left 20%
        right 20%
        margin auto
  .card-title
    text-align left
    height 150px
    line-height 150px
    color $color-text-dd
    font-family $font-r
    font-size $font-size-large-x